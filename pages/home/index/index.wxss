.img-box {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  width: 100%;
  height: 240rpx;
  z-index: -1;
}

.img {
  width: 100%;
  height: 100%;
}

.tab-box {
  display: flex;
  align-items: center;
  z-index: 9;
  text-align: left;
  color: #fff;
  width: 100%;
  padding-bottom: 40rpx;
  margin: 0 30rpx;
}

.tab-box image {
  width: 41rpx;
  height: 50rpx;
  padding-right: 20rpx;
}

.tab-box .tag-img1 {
  width: 14rpx;
  height: 25rpx;
  padding-left: 20rpx;
}

.tab-box text {
  font-size: 36rpx;
  line-height: 36rpx;
}

.swiper {
  padding: 0 30rpx;
  width: 100%;
  height: 748rpx;
  box-sizing: border-box;
}

.swiper-item {
  border-radius: 20rpx;
}

.slide-image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 20rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.slide-image1 {
  width: 100%;
  height: 690rpx;
  border-radius: 20rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.naishu-box{
  display: flex;
  padding: 0 30rpx;
  margin-top:60rpx;

}
