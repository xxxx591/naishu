/* pages/merber/merber.wxss */
page{
  background:rgba(247,248,250,1)
}
.wrapper{
  width: 750rpx;
  position: relative;
}
.wrapper-top{
  width:100%;
  height:346rpx;
  background: white;
  position: relative;
}
.desc-txt{
  position: relative;top: 60rpx;left: 30rpx;
  font-size: 28rpx;
  color:rgba(153,153,153,1);
}
.desc-center{
  width: 100%;
  height: 60rpx;
  position: absolute;top: 100rpx;left: 30rpx;
}
.desc-num{
  font-size:80rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(200,160,21,1);
}
.desc-pay{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  margin-left: 20rpx;
}
.merber{
  width:180rpx;
  height:64rpx;
  background:rgba(30,96,49,1);
  border-radius:32rpx;
  color: #fff;
  text-align: center;
  line-height: 64rpx;
  position: absolute;top: 0;right: 50rpx;
}
.wrapper-bottom{
  width: 100%;
  height: 100rpx;
  position: absolute;bottom: 0;
  /* background: red; */
  border-top: 1rpx solid rgba(229,229,229,1);
}
.item-bottom{
  width: 248rpx;
  height: 100%;
  /* background: red; */
  display: inline-block;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
}
.line{
  width: 1rpx;
  height: 40rpx;
  background: #E6E6E6;
}
.item-line1{
  position: absolute;top: 35rpx;left: 260rpx;
}
.item-line2{
  position: absolute;top: 35rpx;left: 475rpx;
}

/* list列表 */
.wrapper-list{
  width: 100%;
  background: white;
  margin-top: 20rpx;
  padding-top: 40rpx;
}
.integral{
  display: block;
  margin-left: 30rpx;
  font-size:32rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.list-container{
  width: 100%;
  margin-top: 40rpx;
}
.list{
  width: 210rpx;
  display: inline-block;
  margin-left: 30rpx;
  padding-bottom:15rpx; 
}
.list-pic{
  width: 210rpx;
  height: 210rpx;
}
.desc-name{
  display: block;
  font-size:28rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin-top: 10rpx;
}
.desc-integral{
  display: block;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(200,160,21,1);
  margin-top: 15rpx;
}