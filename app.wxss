/**app.wxss**/
.boxxxxx{
  overflow: hidden;
}
movable-area{
  position: absolute;
  width: 100%;
  height: auto;
  overflow: hidden;
  min-height: 100vh;

}
movable-view{
     display: inline-block;
width: 160rpx;
height: 160rpx; 
position: absolute;
bottom: 330rpx;
right: 30rpx;
top: auto;
left: auto;
z-index: 9999;
}
.kefu-log {
  border: 0;
  background: rgba(0, 0, 0, 0);
  width: 180rpx;
  height: 180rpx;
  border-radius: 0;
}

.kefu-log::after {
  border-radius: 0;
  border: none;
}

.kefu-log image {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}