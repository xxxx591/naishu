<view class='wrapper'>
  <view class='picker-container'>
    <view class='picker' bindtap='selectTime'>
      <text>本月</text>
      <image class='down-icon' src='/assets/image/picker.png'></image>
    </view>
  </view>
  <!-- <view wx:if="{{dataList.length < 1}}" style="padding:30rpx 30rpx;">
