page{
  background: #F7F8FA;
}
.wrapper{
  width: 100%;
}
.wrap-top{
  width: 100%;
  min-height: 200rpx;
  background: white;
  position: relative;
}
.phone{
  width:350rpx;
  height:30rpx;
  font-size:28rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  position: relative;top: 30rpx;left: 30rpx;
}
.address-container{
  width: 100%;
  font-size:28rpx;
  position: relative;top: 50rpx;left: 30rpx;
}
.address{
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  display: inline-block;
  position: relative;top:-36rpx;
}
.address-detail{
  width: 550rpx;
  display: inline-block;
}

/* wrap-content */
.wrap-content{
  width: 100%;
  min-height: 422rpx;
  background: white;
}
.store-container{
  margin-top: 30rpx;
  width: 690rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #E5E5E5;
}
.icon{
  width: 32rpx;
  height: 30rpx;
}
.store-name{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-left: 10rpx;
}
.item-container{
  width: 690rpx;
  height: 240rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #E5E5E5;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.item-pic{
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}
.pic{
  width: 160rpx;
  height: 160rpx;
}
.item-desc{
  width: 510rpx;
  height: 160rpx;
  position: relative;
}
.right-top-desc{
  font-size:28rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.right-bottom{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(200,160,21,1);
  position: absolute;left: 0;bottom: 0;
}
.num{
  font-size:28rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  position: absolute;right: 0;bottom: 0;
}
.oder-price{
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  position: absolute;right: 0;bottom: -110rpx;
}
.item-price{
  color: #C8A015;
}
.order-box{
  width: 750rpx;
  margin-top:30rpx;
  background: white;
}
.item-order-container{
  width: 690rpx;
  height: 152rpx;
  margin-left: 30rpx;
}
.order-num{
  width: 690rpx;
  height: 76rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height: 76rpx;
}
.order-time{
  width: 690rpx;
  height: 76rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height: 76rpx;
}