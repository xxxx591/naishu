/* pages/home/list/list.wxss */

/* 商品详情 */

.banner-box {
  width: 750rpx;
  height: 750rpx;
}

.details-box {
  padding: 30rpx;
}

.details-box .num-box2 {
  width: 200rpx;
  height: 64rpx;
  text-align: center;
  line-height: 64rpx;
  color: #fff;
  background: #1e6031;
  border-radius: 32rpx;
  font-size: 28rpx;
}
.num-box2-other{
  position: relative;
width: 48rpx;
height: 48rpx;
text-align: center;
line-height: 48rpx;
color: #1e6031;

}

.suggest {
  padding: 20rpx 0rpx;
  background: #efefef;
  
}

.suggest-title {
  background: #fff;
  padding:  30rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
}
.suggest-content{
  background: #fff;
  padding: 0 30rpx 30rpx;
  font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(102,102,102,1);
line-height:44rpx;
}
/* 底部结算 */

.content-box {
  display: flex;
  position: relative;
}

.left-box {
  flex: 1;
  background: rgba(245, 245, 245, 1);
  height: 100vh;
}

.left-box-title {
  height: 110rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  text-align: center;
  line-height: 110rpx;
  color: rgba(102, 102, 102, 1);
}

.active {
  background: rgba(255, 255, 255, 1);
  color: rgba(51, 51, 51, 1);
}

.right-box {
  flex: 2.8;
  padding: 30rpx 30rpx 0;
}

.bidu-box {
  height: 70rpx;
  display: flex;
  margin-bottom: 30rpx;
}

.bidu-boxx1 {
  background-repeat: no-repeat;
  background-size: 100% 100%;
  color: rgba(255, 109, 64, 1);
  display: flex;
  align-items: center;
  width: 100%;
}

.bidu-boxx1 text {
  flex: 1;
}

.bidu-img-1 {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
  margin-left: 30rpx;
}

.bidu-img-2 {
  width: 14rpx;
  height: 24rpx;
  margin-right: 30rpx;
}

.shpo-details {
  display: flex;
  padding-bottom: 40rpx;
}

.shpo-details image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  margin-right: 26rpx;
  flex: 1;
}

.shop-box {
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
  flex: 2.0;
}

.shop-title {
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  width: 100%;
  height: 24px;
}

.price-ou-box {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.price {
  flex: 1;
}

.price-1 {
  font-size: 28rpx;
  color: rgba(200, 160, 21, 1);
}

.price-2 {
  font-size: 40rpx;
  color: rgba(200, 160, 21, 1);
}

.num-box {
  display: flex;
  justify-content: space-between;
}

.num-box1 {
  position: relative;
  width: 48rpx;
  height: 48rpx;
  text-align: center;
  line-height: 40rpx;
  background: #cdcdcd;
  border-radius: 50%;
  color: #fff;
  font-weight: bold;
  font-size: 26px;
}
.num-box1 .num1-icon{
  position: absolute;
  width: 20rpx;
  height: 4rpx;
  background: #fff;
  left: 50%;
  top: 50%;
  margin-top: -2rpx;
  margin-left: -10rpx; 
}
.num-box1 image{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.num-box2 {
  position: relative;
  width: 48rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  color: #1e6031;
}


.num-box3 {
  position: relative;
  width: 48rpx;
  height: 48rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
  background: #1e6031;
  color: #fff;
  font-weight: bold;
  font-size: 20px;
}
.num-box3 image{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.num-box3 .num2-icon{
  position: absolute;
  width: 20rpx;
  height: 4rpx;
  background: #fff;
  left: 50%;
  top: 50%;
  margin-top: -2rpx;
  margin-left: -10rpx; 
}
.num-box3 .num2-icon-2{
  position: absolute;
  height: 20rpx;
  width: 4rpx;
    left: 50%;
  top: 50%;
  margin-top: -10rpx;
  margin-left: -2rpx; 
  background: #fff;
}
.shop-car {
  display: flex;
  align-items: center;
  position: fixed;
  background: #fff;
  height: 120rpx;
  margin: 0 20rpx 0 40rpx;
  width: 690rpx;
  border-radius: 60rpx;
  box-shadow: 0px 8rpx 26rpx 0px rgba(234, 234, 234, 1);
  line-height: 120rpx;
  bottom: 40rpx;
}

.shop-car .price-2 {
  font-size: 48rpx;
}

.shop-car .price-1 {
  font-size: 32rpx;
}

.shop-right {
  background: rgba(30, 96, 49, 1);
  border-radius: 0px 60rpx 60rpx 0px;
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  width: 200rpx;
  text-align: center;
}

.shop-box-list-01 {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.list-box-title-01 {
  flex: 1;
}

.list-box-title-02 {
  flex: 1;
  color: #888;
  text-align: right;
}

.shop-box-list .shpo-details {
  padding-bottom: 0;
}

.shop-box-list .shop-box {
  padding: 30rpx;
}

.swiper {
  width: 100%;
  height: 748rpx;
  box-sizing: border-box;
}

.swiper-item {
  border-radius: 20rpx;
}

.slide-image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 20rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.slide-image1 {
  width: 100%;
  height: 690rpx;
  border-radius: 20rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}