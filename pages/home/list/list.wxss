/* pages/home/list/list.wxss */

.content-box {
  display: flex;
  position: relative;
}

.left-box {
  flex: 1;
  background: rgba(245, 245, 245, 1);
  height: 100vh;
}

.left-box-title {
  height: 110rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  text-align: center;
  line-height: 110rpx;
  color: rgba(102, 102, 102, 1);
}

.active {
  background: rgba(255, 255, 255, 1);
  color: rgba(51, 51, 51, 1);
}

.right-box {
  flex: 2.8;
  padding: 30rpx 30rpx 0;
}

.bidu-box {
  height: 70rpx;
  display: flex;
  margin-bottom: 30rpx;
}

.bidu-boxx1 {
  background-repeat: no-repeat;
  background-size: 100% 100%;
  color: rgba(255, 109, 64, 1);
  display: flex;
  align-items: center;
  width: 100%;
}

.bidu-boxx1 text {
  flex: 1;
}

.bidu-img-1 {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
  margin-left: 30rpx;
}

.bidu-img-2 {
  width: 14rpx;
  height: 24rpx;
  margin-right: 30rpx;
}

.shpo-details {
  display: flex;
  padding-bottom: 40rpx;
}

.shpo-details image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  padding-right: 26rpx;
}

.shop-box {
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}

.shop-title {
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  width: 100%;
  height:24px;

}
.price-ou-box{
  display: flex;
  justify-content: space-between;
  width:100%;

}
.price{
  flex: 1;
}
.price-1{
  font-size: 28rpx;
  color: rgba(200, 160, 21, 1);
}
.price-2{
  font-size: 40rpx;
  color: rgba(200, 160, 21, 1);
}
.num-box{
  display: flex;
  justify-content: space-between;
}
.num-box1{
  width: 48rpx;
  height: 48rpx;
  text-align: center;
  line-height: 40rpx;
  background: #cdcdcd;
  border-radius: 50%;
  color: #fff;
  font-weight: bold;
  font-size: 26px;
}
.num-box2{
  width: 48rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  color: #1E6031;
}
.num-box3{
  width: 48rpx;
  height: 48rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
  background: #1E6031;
  color: #fff;
  font-weight: bold;
  font-size: 20px;
}